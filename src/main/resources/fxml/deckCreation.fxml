                              <Insets left="10.0" />
                           </padding>
                           <font>
                              <Font name="Segoe UI Italic" size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="2.0" />
                           </VBox.margin>
                        </TextField>
                        <Text fill="#575f72" strokeType="OUTSIDE" strokeWidth="0.0" text="Subject:">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
