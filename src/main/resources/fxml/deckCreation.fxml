                              <Insets top="12.0" />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="title" prefHeight="35.0" prefWidth="300.0" promptText="Japanese vocabulary from anime..." styleClass="textField" stylesheets="@../styles/TextField.css">
